---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { PiLightbulbFill } from "react-icons/pi";
import { RiArrowRightUpLine } from "react-icons/ri";
import projectsData from "../constants/projects.json";
import ProjectCard from "../components/react/Card.tsx";
import socialsData from "../constants/socials.json";

import {author} from "../constants/general";

const projects = projectsData;
const socials = socialsData;
---

<Layout title={author}
		description="Personal portfolio, built with Tailwind CSS, React and Astro"
		maxBodyWidth="md:max-w-[850px]">
	<main>
		<h1 class="font-serif text-[2.5rem] tracking-tight text-primary">
			{author}
		</h1>
		<div class="flex items-center gap-1.5 font-medium tracking-tight">
			<h2 class="text-base text-title underline hover:text-primary transition duration-300">
				<a href="https://github.com/lmartincek/" target="_blank">developer</a>
			</h2>
			<div class="mt-1.5 h-1 w-1 rounded bg-title"></div>
			<h2 class="text-base text-title underline hover:text-primary transition duration-300">
				<a href="https://nomadmania.com/profile/45835/nm/un/by/2025" target="_blank">traveller</a>
			</h2>
			<div class="mt-1.5 h-1 w-1 rounded bg-title"></div>
			<h2 class="text-base text-title">photographer</h2>
		</div>

		<p class="pt-4 text-sm">
			Hi there, I'm Lukas, a 28 y/o frontend developer. I love
			creating cool stuff, always interested in <span class="text-black">web development</span>.
			I'm also a <span class="text-black">passionate traveller</span> and,
			passionate about <span class="text-black">photography and design</span>, with a
			minimalist touch.
		</p>

		<div class="w-fit grid grid-cols-3 gap-2 pt-4 tracking-tight md:flex md:flex-row md:items-start">
			{
				socials.map((social) => (
					<a
						href={social.url}
						target={social.target}
						rel={social.target === "_blank" ? "noopener noreferrer" : undefined}
						class="group flex items-center underline-offset-4 transition duration-150 ease-in-out md:hover:text-primary md:hover:underline">
						<Icon name={social.icon} size={14} class="mr-1.5" />
						<span class="text-sm">{social.name}</span>
						<RiArrowRightUpLine className="opacity-0 transition-opacity duration-150 md:group-hover:opacity-100" />
					</a>
				))
			}
		</div>

		<section class="pt-8">
			<h2 class="font-medium tracking-tight text-title">Recently created</h2>
			<div class="pt-1.5">
				{
					projects.map((project) => (
						<ProjectCard project={project} client:load />
					))
				}
			</div>
			<div class="group">
				<p class="mt-4 w-fit rounded-md border border-body/20 bg-hoverColor/60 px-2 py-1 text-xs text-body transition-all duration-300 ease-in-out">
					<PiLightbulbFill
						className="-mt-0.5 inline-block transition-all duration-300 ease-in-out md:group-hover:text-primary"
					/>
					Feel free to explore my
					<a
						href="https://github.com/lmartincek?tab=repositories"
						rel="noopenner noreferrer"
						target="_blank"
						class="font-medium text-body underline underline-offset-2 transition-all duration-150 ease-in-out md:hover:text-primary md:group-hover:text-primary"
					>GitHub</a
					>.
				</p>
			</div>
		</section>
	</main>
</Layout>