---
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === "/";
import { MdOutlineKeyboardBackspace } from "react-icons/md";
import { TbBook } from "react-icons/tb";
---

<nav class="flex items-center justify-between pb-4 tracking-tight">
	<div>
		{
			isHomePage ? (
				<img
					src="/favicon.ico"
					alt="logo"
					width="18"
					height="18"
					class="transition-all duration-300 ease-linear hover:rotate-180"
				/>
			) : (
				<a
					href="/"
					target="_self"
					class="underline-offset-4 transition duration-150 ease-in-out hover:text-primary hover:underline">
					<MdOutlineKeyboardBackspace className="-mt-0.5 inline-block" />
					<span>home</span>
				</a>
			)
		}
	</div>
	{
		isHomePage ? (
			<div class="flex items-center gap-2">
				<TbBook className="inline-block" size="1.25em" />-
				<a
					href="/8-months-in-latin-america"
					target="_self"
					class="underline-offset-4 transition duration-150 ease-in-out hover:text-primary hover:underline">
					something to read
				</a>
			</div>
		) : (
			""
		)
	}
</nav>
