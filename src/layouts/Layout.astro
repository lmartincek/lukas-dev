---
import { AstroFont }  from "astro-font";
import Footer from "../components/Footer.astro";
import Metadata from "../components/Metadata.astro";
import Nav from "../components/Nav.astro";

type maxBodyWidth = 'md:max-w-[1100px]' | 'md:max-w-[850px]' | 'md:max-w-[950px]'
interface Props {
	title: string;
	description: string;
	maxBodyWidth: maxBodyWidth;
	img?: string;
}
const { title, description, img = "/public/og.png", maxBodyWidth  } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-bgColor">
<head>
	<!-- Google tag (gtag.js) -->
	<script type="text/partytown"
			is:inline
			src=`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GOOGLE_GA_4_ID}`></script>
	<script type="text/partytown"
			is:inline>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag("consent", "default", {
			ad_storage: "denied",
			ad_user_data: "denied",
			ad_personalization: "denied",
			analytics_storage: "denied",
		});

		gtag('config', `${import.meta.env.PUBLIC_GOOGLE_GA_4_ID}`);
	</script>

	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />

	<Metadata
		title={title}
		description={description}
		image={img}
		canonicalUrl={import.meta.env.SITE}
		type="website"
	/>
	<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
	<AstroFont
		config={[
			{
				name: "Satoshi",
				src: [
					{
						style: "normal",
						weight: "400 500 600 700 800 900",
						path: "./public/fonts/Satoshi-Variable.woff2",
					},
				],
				preload: true,
				display: "swap",
				selector: "body",
				fallback: "sans-serif",
			},
			{
				name: "Instrument-Serif",
				src: [
					{
						style: "normal",
						weight: "400",
						path: "./public/fonts/InstrumentSerif-Regular.ttf",
					},
				],
				preload: true,
				display: "swap",
				selector: "body",
				fallback: "serif",
			},
		]}
	/>
</head>
<body
	class=`mx-auto my-8 max-w-[400px] px-4 font-sans text-body selection:bg-primary selection:text-hoverColor md:my-16 md:px-36 ${maxBodyWidth}`>
	<Nav />
	<slot />
	<Footer />
</body>
</html>