---
import Layout from "./Layout.astro";
import "../assets/articleStyles.css";

interface Props {
	description: string;
	title: string;
	img: string;
}

const { description, title, img } = Astro.props;
---

<Layout
	title={title}
	description={description}
	img={img}
	maxBodyWidth="md:max-w-[950px]">
	<slot />

	<script>
		import "../components/javascript/gallery.js";
	</script>
</Layout>
